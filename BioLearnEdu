<script>
/* ---------- Navigation: openTopic / backHome ---------- */
function openTopic(id) {
  document.getElementById('home').style.display = 'none';
  // hide all topics
  document.querySelectorAll('section[id^="topik"]').forEach(s => s.style.display = 'none');
  const el = document.getElementById(id);
  if (el) el.style.display = 'block';
  // set first subtab active inside that topic
  const firstSub = el.querySelector('.sub-btn');
  if (firstSub) firstSub.click();
  window.scrollTo({top:0,behavior:'smooth'});
}
function backHome(){
  // hide all topic sections
  document.querySelectorAll('section[id^="topik"]').forEach(s => s.style.display = 'none');
  document.getElementById('home').style.display = 'block';
  window.scrollTo({top:0,behavior:'smooth'});
}

/* ---------- Tabs: switchSub (works with data-sub attribute) ---------- */
function switchSub(e) {
  // buang aktif di semua sub button
  document.querySelectorAll('.sub-btn').forEach(btn => btn.classList.remove('active'));

  // add active pada button yang ditekan
  e.target.classList.add('active');

  // sembunyikan semua sub-section
  document.querySelectorAll('.sub-section').forEach(sec => sec.style.display = 'none');

  // ambil ID sub-section yang diinginkan
  const target = e.target.getAttribute('data-sub');
  document.getElementById(target).style.display = 'block';
}


/* ---------- QUIZ logic (answers from initial file) ---------- */
const allAnswers = {
  "topik1": {"t1q1":"b","t1q2":"b"},
  "topik2": {"t2q1":"a"},
  "topik3": {"t3q1":"a", "t3q2":"c"},
  "topik4": {"t4q1":"a"},
  "topik5": {"t5q1":"b"},
  "topik6": {"t6q1":"a", "t6q2" : "b", "t6q3" : "d", "t6q4" : "c"}
};

function runQuiz(topicId){
  const topicEl = document.getElementById(topicId);
  const answers = allAnswers[topicId] || {};
  let score = 0;
  const questions = topicEl.querySelectorAll('.quiz-question');
  questions.forEach(q=>{
    const id = q.dataset.qid;
    const sel = q.querySelector('input[name="'+id+'"]:checked');
    const fb = q.querySelector('.feedback');
    if (!sel) { fb.textContent = 'Sila pilih jawapan'; fb.style.color = '#c62828'; return; }
    if (answers[id] === sel.value) { fb.textContent = 'Betul âœ…'; fb.style.color = 'green'; score++; }
    else { fb.textContent = 'Salah âŒ'; fb.style.color = 'red'; }
  });
  const total = questions.length;
  const resEl = document.getElementById('res-' + topicId);
  if (resEl) resEl.textContent = `Skor: ${score} / ${total}`;
}

/* ---------- Drag & drop (simple implementation) ---------- */
let dragged = null;
document.addEventListener('dragstart', (e)=>{
  const el = e.target.closest('.label');
  if (el) {
    dragged = el;
    setTimeout(()=> el.style.visibility = 'hidden', 0);
  }
});
document.addEventListener('dragend', ()=>{
  if (dragged) dragged.style.visibility = 'visible';
  dragged = null;
});
document.addEventListener('dragover', (e)=>{
  if (e.target.closest('.drop-area')) e.preventDefault();
});
document.addEventListener('drop', (e)=>{
  const drop = e.target.closest('.drop-area');
  if (!drop) return;
  e.preventDefault();
  if (dragged) {
    const existing = drop.querySelector('.label');
    if (existing) {
      // move existing back to nearest bank
      const topicSection = drop.closest('section');
      const bank = topicSection ? topicSection.querySelector('.label-bank') : document.querySelector('.label-bank');
      if (bank) bank.appendChild(existing);
    }
    drop.appendChild(dragged);
    dragged.style.position = 'relative';
    dragged.style.margin = '6px';
  }
});

/* ---------- runGame / resetGame ---------- */
function runGame(topicId){
  const topicEl = document.getElementById(topicId);
  const areas = topicEl.querySelectorAll('.drop-area');
  let correct = 0;
  areas.forEach(a=>{
    const placed = a.querySelector('.label');
    a.classList.remove('correct','incorrect');
    if (placed && placed.dataset.target === a.dataset.phase) { a.classList.add('correct'); correct++; }
    else a.classList.add('incorrect');
  });
  const res = document.getElementById('resGame-' + topicId);
  if (res) res.textContent = `Betul: ${correct} / ${areas.length}`;
}

function resetGame(topicId){
  const topicEl = document.getElementById(topicId);
  const bank = topicEl.querySelector('.label-bank');
  if (!bank) return;
  topicEl.querySelectorAll('.drop-area').forEach(a=>{
    const l = a.querySelector('.label');
    if (l) bank.appendChild(l);
    a.classList.remove('correct','incorrect');
  });
  // simple shuffle
  for (let i = bank.children.length; i >= 0; i--) {
    bank.appendChild(bank.children[Math.random() * i | 0]);
  }
  const res = document.getElementById('resGame-' + topicId);
  if (res) res.textContent = '';
}

/* ---------- small accessibility / keyboard nav ---------- */
document.addEventListener('keydown', e=>{
  if (e.key === 'h') backHome();
});
</script>
</body>
</html>
